# Mini-juego Python
# La consola adivina el número deseado indicando Mayor, Menor o Correcto

import random

def computer_guess(x):
    low = 1
    high = x
    feedback = ""

    while feedback != "c":
        if low != high:
            guess = random.randint(low, high)
        else:
            guess = low # Puede cambiar por -> high b/c low = high
        feedback = input(f"Es {guess} muy alto (A), muy bajo (B), o correcto (C) ? ").lower()
        if feedback == "a":
            high = guess - 1
        elif feedback == "b":
            low = guess + 1
    
    print(f"¡Genial! ¡El PC adivinó tu número, {guess}, correctamente!")

computer_guess(100)
